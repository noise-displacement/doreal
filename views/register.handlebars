<main>
<h1 class="sidePadding" data-language-key="register">Register</h1>

<form action="/users/register" method="POST" class="form topPadding bg">
    <div class="inputContainer">
        <label for="username" data-language-key="name">Name</label>
        <input type="text" id="name" name="username" required />
    </div>

    <div class="inputContainer">
        <label for="email" data-language-key="email">Email</label>
        <input type="email" id="email" name="email" required />
    </div>

    <div class="inputContainer">
        <label for="password" data-language-key="password">Password</label>
        <input type="password" id="password" name="password" required />
    </div>

    <button type="submit" data-post-url="/users/register" data-btn-action="register" data-language-key="createUser">Create user</button>
</form>

<span class="topPadding sidePadding">Already have a user? </span><a href="/users/login" data-language-key="login">Login</a>
</main>